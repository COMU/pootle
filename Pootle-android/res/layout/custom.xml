<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="3dip" android:weightSum="1">


    <TextView
            android:id="@+id/suggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="Text Here" android:layout_weight="0.92">
    </TextView>
    <ImageView
            android:id="@+id/imgtrue"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:src="@drawable/dogru" >
    </ImageView>
    <ImageView
            android:id="@+id/imgfalse"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/yanlis" android:layout_gravity="right">
    </ImageView>

</LinearLayout>