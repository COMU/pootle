<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@android:color/white" android:weightSum="1">


    <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/listlanguages"
            android:id="@+id/textView4" android:textSize="30dp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_gravity="center_horizontal" android:layout_weight="0.21"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_language" android:layout_weight="0.10"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/listprojects"
            android:id="@+id/textView7" android:layout_gravity="center_horizontal" android:layout_weight="0.21"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="30dp"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_project" android:layout_weight="0.10"/>

</LinearLayout>