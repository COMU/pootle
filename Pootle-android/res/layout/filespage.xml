<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/topContainer"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:background="@android:color/black">


    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:background="@android:color/white">

        <ScrollView android:id="@+id/medScroller"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
            <TableLayout android:id="@+id/tablerow"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:stretchColumns="*"/>

        </ScrollView>
    </FrameLayout>
</RelativeLayout>


